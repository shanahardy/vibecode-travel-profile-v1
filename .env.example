# Environment Variables Example
# Copy this file to .env for local development
# For production (Replit), use Replit Secrets instead

# REQUIRED: Session secret for authentication
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_session_secret_here

# REQUIRED: PostgreSQL database connection
DATABASE_URL=postgresql://user:password@host:5432/database

# Replit OAuth (automatically provided in Replit environment)
REPL_ID=your_repl_id
ISSUER_URL=https://replit.com/oidc

# Voiceflow Integration (OPTIONAL)
# Get from: https://www.voiceflow.com/dashboard → Project Settings → API Keys
VOICEFLOW_API_KEY=VF.DM.your_api_key_here
VOICEFLOW_PROJECT_KEY=your_project_id_here
VOICEFLOW_VERSION=production
VOICEFLOW_RUNTIME_URL=https://general-runtime.voiceflow.com

# Stripe Payments (OPTIONAL)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PRO=price_your_price_id

# OpenAI ChatKit (OPTIONAL)
OPENAI_API_KEY=sk-your_openai_key
OPENAI_CHATKIT_WORKFLOW_ID=your_workflow_id

# Email (OPTIONAL)
SENDGRID_API_KEY=SG.your_sendgrid_key

# Analytics (OPTIONAL)
POSTHOG_API_KEY=your_posthog_key

# Frontend URL (production only)
FRONTEND_URL=https://your-production-url.com
